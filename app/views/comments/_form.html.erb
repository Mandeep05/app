<%= form_for([@user,@post,@comment]) do |f| %>
  <p>
    <%= f.label :commenter, "User Name" %><br/>
    <%= f.text_field :commenter, :value => @user.email, :readonly => true %>
  </p>
  
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>